#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Run lint-staged for staged files
npx lint-staged

# Run custom quality check on changed files only
echo "ğŸ“Š Running quality analysis on changed files..."
node scripts/pre-commit-quality.js

# If quality check fails, prevent commit
if [ $? -ne 0 ]; then
  echo "âŒ Quality check failed. Please fix issues before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"