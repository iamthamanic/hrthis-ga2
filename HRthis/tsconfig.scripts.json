{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}